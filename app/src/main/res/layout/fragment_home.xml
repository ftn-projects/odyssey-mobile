<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_button_background"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                >
                <ImageButton
                    android:layout_weight="0"
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Filter"
                    android:gravity="fill_vertical|center_horizontal"
                    app:tint="?attr/colorOnSecondaryContainer" />
 />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/search_text_container"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any location"
                        android:layout_marginBottom="3dp">

                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any date"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/zirko_siva"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â·"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/zirko_siva"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any guests"
                            android:textColor="@color/zirko_siva"/>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>




                <ImageButton
                    android:layout_weight="0"
                    android:id="@+id/filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/ic_filter"
                    android:background="@drawable/border_background"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Filter"
                    android:gravity="fill_vertical|center_horizontal"
                    app:tint="?attr/colorOnSecondaryContainer" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.example.odyssey.fragments.AccommodationCard
                    android:id="@+id/accommodationCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"/>

                <com.example.odyssey.fragments.AccommodationCard
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp" />

                <com.example.odyssey.fragments.AccommodationCard
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>