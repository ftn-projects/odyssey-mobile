<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ReviewsSummary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <!-- Repeat the following TableRow for each rating -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Rating value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Stars"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar5"
                android:layout_width="0dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="78"
                android:progressTint="@color/star_color"
                android:backgroundTint="#CCCCCC"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <!-- Review count -->
            <TextView
                android:id="@+id/reviewCount5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2396 Reviews"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Rating value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Stars"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="8dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar4"
                android:layout_width="0dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="17"
                android:progressTint="@color/star_color"
                android:backgroundTint="#CCCCCC"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <!-- Review count -->
            <TextView
                android:id="@+id/reviewCount4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="521 Reviews"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Rating value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Stars"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="8dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="4"
                android:progressTint="@color/star_color"
                android:backgroundTint="#CCCCCC"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <!-- Review count -->
            <TextView
                android:id="@+id/reviewCount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Reviews"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Rating value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Stars"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="8dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="1"
                android:progressTint="@color/star_color"
                android:backgroundTint="#CCCCCC"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <!-- Review count -->
            <TextView
                android:id="@+id/reviewCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31 Reviews"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Rating value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Star"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="8dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="0"
                android:progressTint="@color/star_color"
                android:backgroundTint="#CCCCCC"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <!-- Review count -->
            <TextView
                android:id="@+id/reviewCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Reviews"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular" />
        </TableRow>
    </TableLayout>

</LinearLayout>