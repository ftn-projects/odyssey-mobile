<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Odyssey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/zirko_siva</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uranian_blue</item>
        <item name="colorSecondaryVariant">@color/footer</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <!-- Action bar  -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="boxStrokeColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Odyssey" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
    </style>

    <!-- Toolbar  -->
    <style name="Theme.Odyssey.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="Theme.Odyssey.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Odyssey.NavigationColors" parent="">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="Theme.Odyssey.TextInputLayout" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/zirko_siva</item>

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="Theme.Odyssey.TextInput" parent="">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>